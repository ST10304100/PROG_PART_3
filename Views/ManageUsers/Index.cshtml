@model IEnumerable<PROG_PART_2.Models.UserViewModel>

<div class="container-dashboard">
    <h2>Manage Users</h2>

    <!-- User Management Table -->
    <table class="table table-hover">
        <thead class="table-header">
            <tr>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="action-link">
                            <i class="fa-solid fa-pen-to-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="action-link delete-link">
                            <i class="fa-solid fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* General Container Styling */
    .container-dashboard {
        background-color: #261132; /* Dark purple background */
        color: #ffffff; /* White text */
        padding: 30px;
        border-radius: 10px;
        max-width: 1200px;
        margin: 0 auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Heading Styling */
    h2 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #ffffff;
    }

    /* Table Styling */
    .table {
        width: 100%;
        margin-top: 20px;
        color: #ffffff;
        background-color: #534B58;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .table th {
        background-color: #261132;
        font-size: 1.1rem;
        padding: 15px;
        text-align: center;
    }

    .table td {
        padding: 15px;
        text-align: center;
        border-bottom: 1px solid #534B58;
    }

    .table tbody tr:hover {
        background-color: #534B58;
    }

    /* Action Links Styling */
    .action-link {
        color: #28a745; /* Green color for Edit */
        text-decoration: none;
        font-size: 1rem;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .action-link:hover {
        background-color: #218838;
    }

    .delete-link {
        color: #dc3545; /* Red color for Delete */
        margin-left: 10px;
    }

    .delete-link:hover {
        background-color: #c82333;
    }

</style>
