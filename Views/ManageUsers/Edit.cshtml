        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Heading Styling */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #ffffff;
    }

    /* Form Group Styling */
    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 1.1rem;
        color: #ffffff;
        display: block;
        margin-bottom: 5px;
    }

    .form-group .form-control {
        background-color: #534B58;
        color: #ffffff;
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        font-size: 1rem;
    }

    .form-group .form-control:focus {
        border-color: #28a745; /* Green focus border */
