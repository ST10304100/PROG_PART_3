@model PROG_PART_2.Models.EditUserViewModel

<div class="container-edit">
    <h2>Edit User Role</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Email Field (readonly) -->
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" readonly />
        </div>

        <!-- Phone Number Field -->
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Role Selection Dropdown -->
        <div class="form-group">
            <label asp-for="Role">Role</label>
            <select asp-for="Role" asp-items="@(new SelectList(Model.Roles))" class="form-control"></select>
        </div>

        <!-- Buttons (Update and Cancel) -->
        <div class="form-actions">
            <button type="submit" class="btn-edit btn-primary">Update</button>
            <a asp-action="Index" class="btn-edit btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Container for the Edit User page */
