@model PROG_PART_2.Models.DeleteUserViewModel

<div class="container-delete">
    <h2>Delete User</h2>
    <p>Are you sure you want to delete this user?</p>

    <div class="user-info">
        <h4>Email: @Model.Email</h4>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn-delete btn-danger">Delete</button>
            <a asp-action="Index" class="btn-delete btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    /* Container for Delete User page */
    .container-delete {
        background-color: #261132; /* Dark purple background */
        color: #ffffff; /* White text */
        padding: 30px;
        border-radius: 10px;
        max-width: 600px;
        margin: 0 auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Heading and Instructions */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #ffffff;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 20px;
        color: #ffffff;
    }

    .user-info h4 {
        font-size: 1.2rem;
        color: #ffffff;
        margin-bottom: 20px;
        font-weight: normal;
    }

    /* Button Styling */
    .btn-delete {
        font-size: 1rem;
        padding: 12px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Delete Button (Danger) */
    .btn-danger {
        background-color: #dc3545; /* Red for Delete */
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #c82333;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* Cancel Button (Secondary) */
    .btn-secondary {
        background-color: #6c757d; /* Gray for Cancel */
        color: #fff;
        margin-left: 10px;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* Form Actions Wrapper */
    .form-actions {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    
</style>
