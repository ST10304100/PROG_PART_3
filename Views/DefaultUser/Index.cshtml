@{
    ViewData["Title"] = "Default User";
}

<div class="default-user-container">
    <div class="default-user-box">
        <section class="default-user-section">
            <h2>Welcome, @User.Identity.Name!</h2>
            <p>Your account has been successfully created. Please wait for the HR Manager to assign you a role.</p>
            <div class="note-box">
                <p><strong>Note:</strong> You will be notified once a role has been assigned to you.</p>
            </div>
        </section>
    </div>
</div>


<style>
    /* Main container */
    .default-user-container {
        background-color: #261132; /* Dark Purple background */
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Ensures it takes up the full height */
    }

    /* Default user box */
    .default-user-box {
        background-color: #534B58; /* Grey background for the box */
        border-radius: 10px;
        padding: 30px;
        width: 80%;
        max-width: 600px; /* Max width for the box */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: #ffffff; /* White text */
    }

    /* Section content */
    .default-user-section h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #ffffff; /* White for header text */
        margin-bottom: 20px;
    }

    .default-user-section p {
        font-size: 1rem;
        color: #ffffff; /* White for paragraph text */
    }

    /* Note box styling */
    .note-box {
        background-color: #261132; /* Dark purple background for the note box */
        color: #ffffff; /* White text */
        border: 2px solid #534B58; /* Grey border */
        border-radius: 5px;
        padding: 10px;
        margin-top: 20px;
    }

        .note-box p {
            font-size: 1rem;
        }

        /* Add some hover effects for interactivity */
        .note-box:hover {
            background-color: #261132; /* Change to grey when hovering */
            cursor: pointer;
        }

</style>