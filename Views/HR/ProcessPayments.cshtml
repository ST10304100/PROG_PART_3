@model PROG_PART_2.Models.ProcessPaymentsViewModel

<div class="container-payments">
    <h1>Process Payments</h1>

    <!-- Payment Claims Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer Name</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.ApplicationUser.Firstname @claim.ApplicationUser.Lastname</td>
                    <td>R @claim.TotalAmount.ToString("N2")</td>
                    <td>@claim.Status</td>
                    <td>
                        <form asp-action="ProcessPayment" method="post">
                            <input type="hidden" name="claimId" value="@claim.ClaimId" />
                            <button type="submit" class="btn-process btn-process-success">Process Payment</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Claims.Any())
    {
        <p class="no-claims">No pending payments to review at this time.</p>
    }

    <!-- Payment Summary Section -->
    <div class="summary">
        <h2>Payment Summary</h2>
        <p>Total Claims Processed: @Model.TotalClaims</p>
        <p>Total Amount to be Paid: R @Model.TotalAmountToPay.ToString("N2")</p>
        <p>Pending Payments: @Model.PendingPayments</p>
    </div>
</div>

<style>
    /* General Container Styling */
    .container-payments {
        background-color: #261132; /* Dark purple background */
        color: #ffffff; /* White text */
        padding: 30px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 10px;
    }

    /* Heading Styling */
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
        color: #ffffff;
    }

    /* Table Styling */
    .table {
        width: 100%;
        max-width: 900px;
        margin-top: 20px;
        color: #ffffff;
        background-color: #534B58;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .table th {
            background-color: #261132;
            font-size: 1.1rem;
            padding: 15px;
            text-align: center;
        }

        .table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #534B58;
        }

        .table tbody tr:hover {
            background-color: #534B58;
        }

    /* Button Styling for Processing Payments */
    .btn-process {
        background-color: #261132;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        .btn-process:hover {
            background-color: #534B58;
        }

    /* Button Success Style */
    .btn-process-success {
        background-color: #28a745; /* Green background for success */
    }

        .btn-process-success:hover {
            background-color: #218838;
        }

    /* No Claims Message Styling */
    .no-claims {
        font-size: 1.2rem;
        color: #ffffff;
        text-align: center;
        margin-top: 30px;
    }

    /* Payment Summary Styling */
    .summary {
        background-color: #534B58; /* Grey background for the summary box */
        padding: 20px;
        margin-top: 30px;
        border-radius: 10px;
        width: 100%;
        max-width: 600px;
    }

        .summary h2 {
            font-size: 1.8rem;
            color: #ffffff;
            margin-bottom: 20px;
        }

        .summary p {
            font-size: 1.1rem;
            color: #ffffff;
            margin-bottom: 10px;
        }
</style>
